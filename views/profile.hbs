<!DOCTYPE html>
<html ng-app="profile" ng-cloak ng-controller="profileController">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard @ Pudding</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  

<script src="/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="/lib/css/dashboard.css">
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">{{ app.title }}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="#">Profile</a></li>
            <li><a href="#">Help</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <input type="text" class="form-control" placeholder="Search...">
          </form>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active"><a href="#">{{ user.name }}<span class="sr-only">(current)</span></a></li>
            <li><a href="#">Posts - {{ user.posts }}</a></li>
            <li><a href="#">Followers - {{ user.followers.length }}</a></li>
            <li><a href="#">Chat</a></li>
          </ul>
         
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">Profile</h1>

          <div class="row placeholders jumbotron">
            
            <div class="col-lg-2">
              <center>
              <img src="{{ user.pic }}" class="img-responsive img-thumbnail" alt="User Display Picture">
              <h4>{{ user.name }}</h4>
              <span class="text-muted">Bio</span><br>
              
            {{#if self}}
            <a href="/api/settings/dp" style="display:none;" id="dp" class="btn btn-lg btn-link"><i class="glyphicon glyphicon-user"></i> Edit ProPic </a>
            {{/if}}
            
            {{#if other}}
             <button ng-click="follow()" id="follow" class="btn btn-lg btn-primary"><i class="glyphicon glyphicon-cloud"></i> Follow </button>
            {{/if}}
             <button class="btn btn-lg btn-link"><i class="glyphicon glyphicon-comment"></i> Chat </button>
           
            </center>
            </div>
            
          </div>

          <h2 class="sub-header">Posts</h2>
          
          </div>
        </div>
      </div>
    </div>
</body>
<script type="text/javascript" src="/lib/js/check.log.js"></script>
<script type="text/javascript" src="/angular/angular.min.js"></script>
<!-- AngularJS Controllers--> 
<script type="text/javascript" src="/controllers/controller.profile.js"> </script>
</html>