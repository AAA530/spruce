    <title>Pudding - Signup</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    
    <link rel="stylesheet" href="/fontawesome/css/all.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="/layout.css"> <!-- load fontawesome -->
    <style>
    .theauth {
        background-color: #fff;
        /* animation: tilt 2s linear 1; */
        border-radius: 15px; 
        transform: rotate(-1deg);
        box-shadow: 0 3px 6px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08);
        
    }
   
        
    
        body        { 
            padding-top:75px;
             width: device-width;
              height: device-height;
        
        
            /*background-image: url('http://ultraimg.com/images/Ho6hQWs.jpg');*/
            background-image: linear-gradient(180deg, cornflowerblue, deepskyblue); 
             /*background-color: cornflowerblue; */
            background-repeat: no-repeat;
            background-size: cover;
            
        }   
             
        .shadow { box-shadow: 0 3px 6px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08); border-radius: 10px; }
    </style>
</head>
<body>
<div class="container-fluid theauth">

<div class="col-sm-6 col-sm-offset-3">
    <div class="signup-form">
    <br>
    <div class="agradient logo-div"> 
        <h2 class="font"><center> Pudding </center></h2>
        <center class="font">signup</center>
    </div>
    <!-- show any messages that come back with authentication -->
    {{#if err}}
        <div class="alert alert-danger"> {{ err }} </div>
    {{/if}}

    <!-- Signup FORM -->
    <form action="/auth/signup" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="text-muted">Username</label>
            <input type="text" placeholder="your_nick_name" class="form-control" name="username">
        </div>
        <div class="form-group">
            <label class="text-muted">Password</label>
            <input type="password" placeholder="the_secret" class="form-control" name="password">
        </div>

        <button type="submit" class="btn agradient form-control">GET STARTED</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/auth/login" style="color:#159957">Login</a></p>
    <p>Or go <a href="/" style="color:#159957">home</a>.</p>
<br>
</div>
</div>

</div>
