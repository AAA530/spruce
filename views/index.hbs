<script type="text/javascript">
  var user = "{{client}}";
  Push.Permission.request(function (){
    Push.create("Hello from Pudding!", {
        body: "This is a startup notification!",
        icon: "/lib/user.png",
        timeout: 5000,
        onClick: function() {
            console.log(this);
        }
    });
  },function (argument) {
    
  
    Push.clear()
  });
  var socket = io.connect('/services')

    socket.on('connect', function () {
      console.log('connected');
    });
    socket.on('disabled', function(res) {
      console.log(res+'disabled')
      $("#"+res)[0].disabled = "none";
      $("#"+res)[0].innerHTML = "Liked!"
      Push.create("Notification by Pudding", {
        body: "The post was liked by you!",
        icon: "/lib/user.png",
        
        onClick: function() {
            console.log(this);
        }
      });
    })
    socket.on('commented', function(res) {
      console.log(res+'commented')
      
      $('#comment_'+res.id).append('<div><a class="user-comment" href="/user/{{client}}">{{ client }}</a> '+res.text+' </div>')

      Push.create("Notification by Pudding", {
        body: "New comment by you! Whoo-ho! -- "+res.text,
        icon: "/lib/user.png",
        
        onClick: function() {
            console.log(this);
        }
      });
    })
  
  function like(id) {
    //console.log(id)
     socket.emit('like', {
        id: id,
        initiater: user
     })
  }
   
  function comment(id) {
    //console.log(id)
     socket.emit('comment', {
        id: id,
        text: $('#input_'+id).val(),
        initiater: user
     })
  }
  
  
   
</script>
